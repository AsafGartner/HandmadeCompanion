flexbox()
  display: -webkit-box
  display: -moz-box
  display: -ms-flexbox
  display: -webkit-flex
  display: flex

flex()
  -webkit-box-flex: arguments
  -moz-box-flex: arguments
  -webkit-flex: arguments
  -ms-flex: arguments
  flex: arguments
  
flex-wrap()
  -webkit-flex-wrap: wrap
  flex-wrap: wrap
  
flex-justify()
  -webkit-justify-content: arguments
  justify-content: arguments
  

body
  margin: 0px
  padding: 0px
  background-color: #000
  background-repeat: no-repeat
  background-position: center top
  background-image: url(https://forums.handmadehero.org/images/home_1920x1080.jpg)
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 14px
  line-height: 18px

  #outer_holder
    margin: 0 auto
    margin-top: 128px
    max-width: 1024px
    
    @media screen and (min-width: 1320px)
      max-width: 1300px

    &>header
      margin: 0px
      padding: 0px
      min-height: 24px
      line-height: 24px
      
      nav

        ul
          flexbox()
          flex-wrap()
          flex-justify: space-around
          list-style-type: none
          margin: 0
          padding: 0

          li
            display: inline-block
            flex: 1 1 auto
            margin-left: 3.5px
            margin-right: 3.5px
            margin-bottom: 1px

            a
              display: block
              padding: 4px
              background-color: rgb(56, 102, 124)
              color: #ccc
              text-align: center
              text-decoration: none
    
    .back
      margin: 0px auto 20px auto
      box-shadow: 0px 0px 128px 20px rgb(0, 0, 0)
      
      .outer
        flexbox()
        flex-wrap()
        align-items: flex-start
        flex-justify: center
        padding: 5px
        background-color: #888
                  
        &>article
          flex: 1 1 50%

        article
          margin: 5.5px
          box-shadow: 0px 0px 4px rgb(0, 0, 0)
          padding: 30px
          background-color: #ddd
          
        &>.sidebar
          flex: 0 0 271px
          
          article
            width: 200px
            width: 200px

#player-wrapper
  display: inline-block
  flex: 0 1 auto
  margin: 5.5px
  box-shadow: 0px 0px 4px rgb(0, 0, 0)
    
  #player
    @media screen
      width: 320px
      height: 210px
      
    @media screen and (min-width: 500px)
      width: 480px
      height: 300px

    @media screen and (min-width: 670px)
      width: 640px
      height: 390px
      
    @media screen and (min-width: 890px)
      width: 854px
      height: 510px
    
    @media screen and (min-width: 1320px)
      width: 1280px
      height: 750px

nav.timecodes
  margin: 5.5px
  margin-right: 7.5px
  width: 200px
  flex: 0 0 auto
  
  a
    color: #ccc
  
  ul[name=markers]
    margin: 0px
    padding: 0px
    list-style-type: none
    font-size: 11px
    box-shadow: 0px 0px 4px rgb(0, 0, 0)
    
    &>li
      padding: 5px
      display: block
      border-bottom: 1px solid #333
      background-color: #666
      color: #ddd
        
      &:hover
        background-color: #555
      
      a
        display: block
        text-decoration: none


#game_icon 
  background-position: 0px 0px
  background-repeat: no-repeat
  background-image:url(/images/hero_home_200x114.png)
  background-size:cover
  box-shadow: inset 0px 0px 16px rgba(0, 0, 0, 0.7)
  height: 113px
  margin: 0px 0px 6px 0px

#game_title
  margin: 16px 0px 0px 0px
  padding: 0
  font-size:18px
  line-height:24px
  font-weight:bold
  color:#00547C
  white-space: nowrap
  text-shadow:1px 1px 2px rgba(0,0,0,0.25)
  top: -4px

#game_description 
  font-size: 13px
  text-align: left
  line-height: 21px
  color:#666
  top: -2px

#purchase_buy 
  margin: 4px 0px 0px 0px
  padding: 12px 0px 0px 0px
  text-align: center

#buy_now
  color: #C9D7DE
  background-color: #38667C
  padding: 6px 16px 10px 16px
  text-align: center
  font-size: 13px
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.5), inset 0px -10px 4px -8px rgba(0, 0, 0, 1.0)
  font-weight: bold
  text-decoration: none
  
#buy_now:hover
  background-color: #6B93A7
  color: #fff
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 1.0), inset 0px -10px 4px -8px rgba(0, 0, 0, 1.0)
