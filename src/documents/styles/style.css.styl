body
  font-family: Liberation, Helvetica, Arial, sans-serif
  font-size: 14px

article
  width: 854px
  margin-left: 320px
  
  p
    padding-left: 5px

body>header
  margin: 0px
  padding: 0px
  background-color: #666
  height: 24px
  line-height: 24px
  
  a
    color: #ccc

  h1
    margin: 0px
    font-weight: normal
    font-size: 14px
    color: #ccc
    
    a.site-title
      display: inline-block
      padding-left: 28px
      width: 292px
      margin-right: 5px
      background-color: #444
      background-image: url("/images/handmade-icon.png")
      background-repeat: no-repeat
      text-decoration: none
      font-weight: bold
      
#player-wrapper
  display: flex
  //justify-content: center
  height: 750px
  background-color: #333
  color: #ccc
  
  a
    color: #ccc

  &>nav
    flex-shrink: 0
    width: 320px
    overflow-y: auto
    
    ul[name=markers]
      margin: 0px
      padding: 0px
      list-style-type: none
      font-size: 11px
      
      &>li
        padding: 5px
        display: block
        border-bottom: 1px solid #333
        background-color: #666
        color: #ddd
          
        &:hover
          background-color: #555
        
        a
          display: block
          text-decoration: none
    
  #player
    flex-shrink: 0